<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/drawer_list_child_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_toStartOf="@+id/drawer_list_child_end_layout"
        android:layout_toLeftOf="@+id/drawer_list_child_end_layout"
        android:gravity="start|center_vertical"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="5dp"

        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/drawer_list_child_end_layout"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_centerVertical="true"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/drawer_list_child_counter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="1"
            android:textColor="#FFFFFF"

            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
